@model PokedexWebApp.Models.Pokemon

@{
    ViewData["Title"] = "Edit";
}
<div class="background-overlay"></div>
<h5 id="EditH5">Edit Pokemon</h5>
<hr />
<div class="container" id="EditContainer">
    @if (TempData["SuccessNotification"] != null)
    {
        <div class="modal" style="display:block">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Success</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>@TempData["SuccessNotification"]</p>
                    </div>
                </div>
            </div>
        </div>
    }
    <div>
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Pokemon No</label> <span asp-validation-for="PokemonNo" class="text-danger"></span>
                <input asp-for="PokemonNo" class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label">Pokemon Name</label> <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label">Type</label> <span asp-validation-for="Type" class="text-danger"></span>
                <input asp-for="Type" class="form-control" />

            </div>
            <div class="form-group">
                <label class="control-label">Description</label> <span asp-validation-for="Description" class="text-danger"></span>
                <input asp-for="Description" class="form-control" />

            </div>

            <div class="form-group">
                <input type="submit" style="width: 100%; margin-top: 5px;" value="SAVE" class="btn btn-dark" />
            </div>
            <div>
                <a class="btn btn-danger" style="width: 100%; margin-top: 5px;" asp-action="GetAllPokemon">CANCEL</a>
            </div>

        </form>
    </div>
</div>
