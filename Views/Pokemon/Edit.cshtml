@model PokedexWebApp.Models.Pokemon

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.7.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<style>
    .background-overlay {
        /* Add your custom background overlay styles here */
    }

    #EditContainer {
        /* Add your custom container styles here */
    }

    #EditH5 {
        /* Add your custom heading styles here */
    }
</style>

<div class="background-overlay"></div>
<h5 id="EditH5" class="text-center mb-4">Edit Pokemon</h5>
<hr />

<div class="container" id="EditContainer">
    @if (TempData["SuccessNotification"] != null)
    {
        <div class="modal show" tabindex="-1" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Success</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>@TempData["SuccessNotification"]</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label">Pokemon No</label>
                    <span asp-validation-for="PokemonNo" class="text-danger"></span>
                    <input asp-for="PokemonNo" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Pokemon Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input asp-for="Name" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Pokemon Type</label>
                    <span asp-validation-for="Type" class="text-danger"></span>
                    <input asp-for="Type" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input asp-for="Description" class="form-control" />
                </div>

                <div class="form-group">
                    <input type="submit" style="width: 100%; margin-top: 10px;" value="SAVE" class="btn btn-primary" />
                </div>

                <div class="form-group">
                    <a class="btn btn-secondary" style="width: 100%; margin-top: 5px;" asp-action="GetAllPokemon">CANCEL</a>
                </div>
            </form>
        </div>
    </div>
</div>
