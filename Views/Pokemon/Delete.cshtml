@model PokedexWebApp.Models.Pokemon

@{
    ViewData["Title"] = "Delete";
}

<h4>Delete Pokemon</h4>

<p>Are you sure you want to delete the following Pokemon?</p>

<table class="table table-bordered">
    <tr>
        <th>Pokemon No</th>
        <td>@Html.DisplayFor(model => model.PokemonNo)</td>
    </tr>
    <tr>
        <th>Pokemon Name</th>
        <td>@Html.DisplayFor(model => model.Name)</td>
    </tr>
    <tr>
        <th>Type</th>
        <td>@Html.DisplayFor(model => model.Type)</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Html.DisplayFor(model => model.Description)</td>
    </tr>
</table>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Delete Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this Pokemon?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                @using (Html.BeginForm("Delete", "Pokemon", new { id = Model.Id }, FormMethod.Post))
                {
                    <input type="submit" value="Delete" class="btn btn-danger" />
                }
            </div>
        </div>
    </div>
</div>

<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteConfirmationModal">Delete</button> |
@Html.ActionLink("Back to List", "GetAllPokemon")
